doctrine:
	connections:
		default:
			driver: pdo_sqlite
			path: %storageDir%/db.sqlite

	entityManagers:
		default:
			connection: default

media:
	entityManager: @doctrine.entityManagers.default


model:
	entityManager: @doctrine.entityManagers.default

services:
	cacheStorage:
		class: Nette\Caching\Storages\MemoryStorage
	templateCacheStorage:
		class: Nette\Caching\Storages\MemoryStorage
		autowired: no
